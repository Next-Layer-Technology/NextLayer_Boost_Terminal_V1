<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blackish_custom_color</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowBackground">@drawable/bg</item>-->
        <item name="font">@font/roboto_regular</item>

    </style>

    <!-- Base application theme. -->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="font">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textColorHint">@color/white_color</item>
        <item name="backgroundTint">@color/white_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="TextViewLinesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="font">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="MerchantLinearListTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_150sdp</item>
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:background">@color/blue_custom_color</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="RoundedCornerDialog.MaterialComponents" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">45dp</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="ScrollbarStyleBoost">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_thumb_boost</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_track_boost</item>
        <item name="android:scrollbarSize">22dp</item>
        <item name="android:scrollbarFadeDuration">800</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
    </style>

</resources>
