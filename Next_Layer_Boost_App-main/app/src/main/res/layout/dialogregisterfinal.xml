<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_17sdp"
        android:textColor="@color/colorBlack"
        android:text="Thank You for Registration"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text="Client ID"
        android:layout_marginTop="@dimen/_17sdp"
        android:textSize="@dimen/_10sdp"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/ivClientID"
        android:layout_width="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_height="@dimen/_60sdp"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:text="NextLayer Email Address Credentials"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/ivEmailAddress"
        android:layout_width="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_height="@dimen/_60sdp"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_17sdp"
        android:text="Sign in to NextLayer Email"
        android:textSize="@dimen/_10sdp"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/ivPassword"
        android:layout_width="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_height="@dimen/_60sdp"></ImageView>
</LinearLayout>